{
  "name": "boilerplate-microservice",
  "version": "0.0.1",
  "description": "Boilerplate for node js with typescript.",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "lint": "eslint --ext .ts ./src",
    "lint:fix": "eslint --fix --ext .ts ./src",
    "build": "rm -rf ./build && tsc",
    "dev": "ts-node-dev --respawn --files src/index.ts",
    "prepare": "husky install"
  },
  "keywords": [
    "node",
    "api",
    "microservice"
  ],
  "author": "Emmanuel G. Nipal Jr.",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^27.0.3",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.11.12",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^25.3.0",
    "husky": "^7.0.4",
    "jest": "^27.4.5",
    "lint-staged": "^12.1.2",
    "ts-jest": "^27.1.2",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.3"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "date-fns": "^2.27.0",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "morgan": "^1.10.0"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix"
  }
}
