{
  "name": "boilerplate-ts-nodejs",
  "version": "0.3.0",
  "description": "Boilerplate for node js with typescript.",
  "main": "index.js",
  "keywords": [
    "node",
    "api"
  ],
  "author": "Emmanuel G. Nipal Jr.",
  "license": "ISC",
  "scripts": {
    "test": "jest",
    "lint": "eslint --ext .ts ./src",
    "lint:fix": "eslint --fix --ext .ts ./src",
    "format": "npx prettier --write .",
    "build": "rm -rf ./build && tsc",
    "dev": "ts-node-dev --respawn --files src/index.ts",
    "start": "cross-env NODE_ENV=production node build/index.js",
    "pm2:start": "pm2 start npm --name 'sample-app-name' -- run start",
    "deploy": "npm run build && npm run pm2:start",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix",
    "**/*": "prettier --write --ignore-unknown"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^27.0.3",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.11.12",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^25.3.0",
    "husky": "^7.0.4",
    "jest": "^27.4.5",
    "jest-extended": "^1.2.0",
    "jest-mock-extended": "^2.0.4",
    "lint-staged": "^12.1.2",
    "prettier": "^2.5.1",
    "supertest": "^6.1.6",
    "ts-jest": "^27.1.2",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.3"
  },
  "dependencies": {
    "axios": "^0.24.0",
    "cors": "^2.8.5",
    "date-fns": "^2.27.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-validator": "^6.14.0",
    "helmet": "^4.6.0",
    "morgan": "^1.10.0"
  }
}