{
  "name": "nodejs-ts-express",
  "version": "0.8.1",
  "description": "Boilerplate for node js with typescript",
  "private": true,
  "main": "index.js",
  "keywords": [
    "node",
    "api",
    "express"
  ],
  "author": "Emmanuel Nipal <emnnipal@gmail.com>",
  "license": "ISC",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "lint": "eslint --ext .ts ./src",
    "lint:fix": "eslint --fix --ext .ts ./src",
    "format": "npx prettier --write .",
    "check:types": "tsc --noEmit",
    "build": "rm -rf ./build && etsc",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "cross-env NODE_ENV=production node build/index.js",
    "pm2:start": "pm2 start npm --name 'sample-app-name' -- run start",
    "pm2:cluster:start": "pm2 start -i 0 npm --name 'sample-app-name' -- run start",
    "deploy": "npm run build && npm run pm2:start",
    "docker:build": "docker build -t template/nodejs-ts-express .",
    "docker:run": "docker run --name nodejs-ts-express -p 3000:8080 -d template/nodejs-ts-express",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix",
    "**/*": "prettier --write --ignore-unknown"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@emarketeer/esbuild-plugin-tsc": "^0.4.1",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/helmet": "^4.0.0",
    "@types/lodash": "^4.14.178",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.18",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "@vitest/ui": "^0.12.9",
    "c8": "^7.11.3",
    "cross-env": "^7.0.3",
    "esbuild": "^0.14.23",
    "esbuild-node-tsc": "^1.8.3",
    "eslint": "^8.9.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.4",
    "prettier": "^2.5.1",
    "supertest": "^6.2.2",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.5",
    "vitest": "^0.12.9"
  },
  "dependencies": {
    "axios": "^0.26.0",
    "cors": "^2.8.5",
    "date-fns": "^2.28.0",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "helmet": "^5.0.2",
    "joi": "^17.6.0",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "winston": "^3.6.0"
  }
}